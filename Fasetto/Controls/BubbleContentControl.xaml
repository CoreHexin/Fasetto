<UserControl
    x:Class="Fasetto.Controls.BubbleContentControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Fasetto.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="100"
    d:DesignWidth="300"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Border Background="White" CornerRadius="10">
            <Border.Effect>
                <DropShadowEffect BlurRadius="5" ShadowDepth="2" />
            </Border.Effect>
            
            <TextBlock
                VerticalAlignment="Center"
                FontFamily="{StaticResource LatoRegular}"
                FontSize="16"
                Foreground="{StaticResource ForegroundVeryDarkColorBrush}"
                Text="test" />
            
        </Border>

        <Path
            x:Name="TriangleBubble"
            Grid.Row="1"
            Margin="0,-1,0,0"
            HorizontalAlignment="Center"
            Data="M 0,0 L 20,0 L 10,15"
            Fill="White">
            <Path.Effect>
                <DropShadowEffect BlurRadius="3" ShadowDepth="2" />
            </Path.Effect>
        </Path>


    </Grid>
</UserControl>
